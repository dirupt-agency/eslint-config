{
	"name": "@dirupt/eslint-config",
	"description": "ESLint config from DIRUPT team.",
	"version": "1.1.8",
	"license": "MIT",
	"private": false,
	"main": "index.js",
	"exports": {
		".": "./index.js",
		"./recommended": "./recommended.js",
		"./react": "./react.js",
		"./typescript": "./typescript.js",
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DiruptLab/eslint-config.git"
	},
	"bugs": {
		"url": "https://github.com/DiruptLab/eslint-config/issues"
	},
	"homepage": "https://github.com/DiruptLab/eslint-config#readme",
	"keywords": [
		"dirupt",
		"javascript",
		"eslint",
		"eslintconfig",
		"eslint-config",
		"prettier",
		"prettier-config",
		"typescript",
		"code-quality"
	],
	"author": {
		"name": "DIRUPT",
		"email": "hello@di-rupt.com",
		"url": "https://www.di-rupt.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"format": "prettier --write **/*.js",
		"lint": "eslint ./ --ignore-path .gitignore",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "husky install",
		"release": "HUSKY=0 standard-version",
		"release:minor": "HUSKY=0 standard-version --release-as minor",
		"release:patch": "HUSKY=0 standard-version --release-as patch",
		"release:major": "HUSKY=0 standard-version --release-as major"
	},
	"lint-staged": {
		"./src/**/*.{js,jsx,ts,tsx}": [
			"eslint ./src"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"standard-version": {
		"no-verify": true,
		"tag-prefix": "",
		"skip": {
			"tag": true
		}
	},
	"peerDependencies": {
		"eslint": ">=8.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.5.0",
		"prettier": ">=3.0",
		"typescript": ">=4.0"
	},
	"dependencies": {
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-unused-imports": "^3.0.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"eslint": "^8.50.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.5.0",
		"prettier": "^3.0.3",
		"@commitlint/cli": "17.7.2",
		"@commitlint/config-conventional": "17.7.0",
		"commitizen": "4.3.0",
		"cz-conventional-changelog": "3.3.0",
		"husky": "8.0.3",
		"lint-staged": "14.0.1",
		"standard-version": "9.5.0",
		"typescript": "5.2.2"
	}
}
