{
	"name": "@dirupt/eslint-config",
	"description": "ESLint config from DIRUPT team.",
	"version": "2.0.0",
	"license": "MIT",
	"private": false,
	"main": "src/index.js",
	"exports": {
		".": "./src/index.js",
		"./adonis": "./src/configs/adonis.js",
		"./eslint-plugin-import": "./src/base/eslint-plugin-import.js",
		"./eslint-plugin-unused-imports": "./src/base/eslint-plugin-unused-imports.js",
		"./common": "./src/common.js",
		"./package.json": "./package.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DiruptLab/eslint-config.git"
	},
	"bugs": {
		"url": "https://github.com/DiruptLab/eslint-config/issues"
	},
	"homepage": "https://github.com/DiruptLab/eslint-config#readme",
	"keywords": [
		"dirupt",
		"javascript",
		"eslint",
		"eslintconfig",
		"eslint-config",
		"prettier",
		"prettier-config",
		"typescript",
		"code-quality"
	],
	"author": {
		"name": "DIRUPT",
		"email": "hello@di-rupt.com",
		"url": "https://www.di-rupt.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"format": "prettier --write **/*.js",
		"lint": "eslint ./ --ignore-path .gitignore",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "husky install",
		"release": "HUSKY=0 standard-version",
		"release:minor": "HUSKY=0 standard-version --release-as minor",
		"release:patch": "HUSKY=0 standard-version --release-as patch",
		"release:major": "HUSKY=0 standard-version --release-as major"
	},
	"lint-staged": {
		"./src/**/*.{js,jsx,ts,tsx}": [
			"eslint ./src"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"standard-version": {
		"no-verify": true,
		"tag-prefix": "",
		"skip": {
			"tag": true
		}
	},
	"peerDependencies": {
		"@typescript-eslint/eslint-plugin": ">=8.6",
		"@typescript-eslint/parser": ">=8.6",
		"eslint": ">=9.0",
		"eslint-config-prettier": ">=9.1",
		"eslint-plugin-import": ">=2.30",
		"eslint-plugin-jsx-a11y": ">=6.10",
		"eslint-plugin-prettier": ">=5.2",
		"eslint-plugin-react": ">=7.36",
		"eslint-plugin-react-hooks": ">=4.5",
		"eslint-plugin-unused-imports": ">=4.1",
		"prettier": ">=3.0",
		"typescript": ">=4.0"
	},
	"devDependencies": {
		"@commitlint/cli": "19.5.0",
		"@commitlint/config-conventional": "19.5.0",
		"commitizen": "4.3.0",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "^9.10.0",
		"husky": "9.1.6",
		"lint-staged": "15.2.10",
		"prettier": "^3.3.3",
		"standard-version": "9.5.0",
		"typescript": "5.6.2"
	}
}
